{% extends 'login-layout.html.twig' %}

{% block container %}
<div clas="row">
    <div class="col-sm-6">
        <h3 class="text-center">Inicie sesión</h3>
        <form action="{{ path("admin_login_check") }}" method="post" class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-4 control-label" for="username">Usuario</label>
                <div class="col-sm-8">
                    <input class="form-control" id="username" name="_username" required="required" type="text" value="{{ last_username }}">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="password">Contraseña</label>
                <div class="col-sm-8">
                    <input class="form-control" id="password" name="_password" required="required" type="password">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <div class="checkbox">
                        <label>
                            <input id="remember_me" name="_remember_me" type="checkbox" value="on"> Recuérdame
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-primary" id="_submit" name="_submit" type="submit">Ingresar</button>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}